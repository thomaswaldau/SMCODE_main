<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_custom_sketch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tstp.smcode.customSketch">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>

    <CheckBox
        android:text="Character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/cb_characterCustom" />

    <CheckBox
        android:text="Attribute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cb_characterCustom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/cb_attributeCustom" />

    <CheckBox
        android:text="Timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cb_attributeCustom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:id="@+id/cb_timerCustom" />

    <CheckBox
        android:text="Color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cb_timerCustom"
        android:layout_alignRight="@+id/cb_backgroundCustom"
        android:layout_alignEnd="@+id/cb_backgroundCustom"
        android:id="@+id/cb_colorCustom" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/cb_colorCustom"
        android:layout_alignEnd="@+id/cb_colorCustom"
        android:layout_marginBottom="88dp"
        android:id="@+id/btn_goCusstom" />

    <CheckBox
        android:text="Emotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb_emotionCustom"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/cb_backgroundCustom"
        android:layout_toEndOf="@+id/cb_backgroundCustom"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <CheckBox
        android:text="background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb_backgroundCustom"
        android:layout_below="@+id/cb_settingCustom"
        android:layout_toRightOf="@+id/cb_characterCustom"
        android:layout_toEndOf="@+id/cb_characterCustom" />

    <CheckBox
        android:text="Setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb_settingCustom"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/cb_characterCustom"
        android:layout_toEndOf="@+id/cb_characterCustom" />
</RelativeLayout>
